---
import { socialData } from '../data/navData'; 
import { Icon } from 'astro-icon';
---

<header class="sticky top-0 flex max-h-screen w-1/2 flex-col justify-between py-24">
  <div>
    <h1 class="text-4xl font-bold tracking-tighter text-slate-200">
      <a href="/" class="hover:text-teal-300">Andr√©s Alvarado</a>
    </h1>
    <h2 class="mt-3 text-lg font-medium tracking-tighter text-slate-200">Desarrollador web</h2>
    <p class="mt-4 max-w-xs leading-normal">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
  </div>
  <ul class="flex gap-4" aria-label="Social media">
    {
      socialData.map((social) => (
        <li>
          <a href={social.url} title={social.name} class="hover:text-teal-300" target="_blank" rel="noopener noreferrer">
            <Icon name={social.icon} width="40" class="hover:scale-110 transition duration-300"/>
          </a>
        </li>
      ))
    }
  </ul>
</header>